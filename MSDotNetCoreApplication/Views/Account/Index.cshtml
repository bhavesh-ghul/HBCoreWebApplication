@model Domain.User.UserProfile
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" class="form-control" asp-for="userName" id="Username" placeholder="Username" autocomplete="off">
        <span asp-validation-for="userName" class="error"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" asp-for="password" id="Password" placeholder="Password">
        <span asp-validation-for="password" class="error"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">ConfirmPassword</label>
        <input type="password" class="form-control" asp-for="confirmPassword" id="ConfirmPassword" placeholder="ConfirmPassword">
        <span asp-validation-for="confirmPassword" class="error"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" asp-for="email" id="Email" placeholder="Email" autocomplete="off">
        <span asp-validation-for="email" class="error"></span>
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="number" class="form-control" asp-for="phone" id="Phone" placeholder="Phone" autocomplete="off">
        <span asp-validation-for="phone" class="error"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

